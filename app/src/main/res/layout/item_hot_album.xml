<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="@dimen/_13sdp"
    tools:ignore="RtlSymmetry">

    <androidx.cardview.widget.CardView
        android:id="@+id/hot_album_thumb_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_4sdp">

        <ImageView
            android:id="@+id/hot_album_thumb"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp"
            android:background="@drawable/hot_album_thumb_background"
            android:scaleType="centerCrop"
            android:src="@color/colorAccent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/hot_album_name"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_album_thumb_container"
        android:padding="@dimen/_4sdp"
        android:textColor="@color/colorAccent"
        tools:text="Love"/>

    <LinearLayout
        android:layout_width="@dimen/_75sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/hot_album_name"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hot_album_number_of_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="100"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_4sdp"
            android:text="@string/hot_album_tracks" />
    </LinearLayout>

</RelativeLayout>