<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_hot_music_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_333333"
    android:padding="@dimen/_9sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/iv_disk_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:cardCornerRadius="@dimen/_4sdp">
        <ImageView
            android:id="@+id/iv_disk"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/default_music_picture" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/tvAdd"
        android:layout_toRightOf="@+id/iv_disk_container"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_hot_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name"
            android:textColor="@color/c_fff"
            android:textStyle="bold"
            android:textSize="@dimen/_12ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:background="@drawable/icon_clock" />

            <TextView
                android:id="@+id/item_hot_music_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_3sdp"
                android:maxLines="2"
                android:text="time"
                android:textColor="@color/c_f15b5b"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_hot_music_download"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="6dp"
        android:src="@drawable/icon_download"
        android:visibility="visible" />

</RelativeLayout>